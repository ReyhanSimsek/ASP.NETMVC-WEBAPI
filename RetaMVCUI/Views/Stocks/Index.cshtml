@model List<RetaDAL.STOCKS>
@{
    ViewBag.Title = "Index";
}

<h2>Stoklar</h2>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Yeni Kayıt</button>
<div class="row">
    <div class="col-lg-12">
        <table id="myTable" class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Stok Kod</th>
                    <th>Ad</th>
                    <th>Miktar</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.STOCKCODE</td>
                        <td>@item.NAME</td>
                        <td>@item.QUANTITY</td>
                        <td><a href="/Stocks/delete/@item.ID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Stocks/edit/@item.ID" data-toggle="modal" data-target="#updateModal" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Stok Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form action="/Stocks/create" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Stok Kod</label>
                                <input type="text" name="STOCKCODE" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Ad</label>
                                <input type="text" name="NAME" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Miktar</label>
                                <input type="text" name="QUANTITY" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            </div>
       
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

